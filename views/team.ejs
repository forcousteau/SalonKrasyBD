<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (employees.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Patronymic</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Experince</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% employees.forEach((employee, index) => { %>
                        <tr>
                            <th scope="row"><%= employee.employee_id %></th>
                            <td><%= employee.first_name %></td>
                            <td><%= employee.surname %></td>
                            <td><%= employee.patronymic %></td>
                            <td><%= employee.phone_num %></td>
                            <td><%= employee.experince %></td>
                            <td><%= employee.salary %></td>
                            <td>
                                <a href="/edite/<%= employee.employee_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/deletee/<%= employee.employee_id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No employees found. Go <a href="/adde" >here</a> to add employees.</p>
        <% } %>

