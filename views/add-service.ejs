<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-service-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="number" class="form-control"  id="price"  name="price" placeholder="Price" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="service_name" id="service-name" placeholder="Service Name" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="time" class="form-control" name="time_amount" id="time-amount" placeholder="Time Amount" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Service</button>
        </form>
    </div>
</div>
</body>
</html>
